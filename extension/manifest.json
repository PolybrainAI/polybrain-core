{
  "manifest_version": 3,
  "name": "Polybrain",
  "description": "OnShape LLM Plugin",
  "version": "1.0",
  "action": {
    "default_popup": "polybrain.html",
    "default_icon": "images/logo-16.png"
  },
  "icons": {
    "16": "images/logo-16.png",
    "32": "images/logo-32.png",
    "48": "images/logo-48.png",
    "128": "images/logo-128.png",
    "1024": "images/logo-1024.png"
  },
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "css": ["assistant.css"],
      "resources": ["images/logo-nobackground.png"],
      "matches": ["https://cad.onshape.com/*"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["images/logo-nobackground.png", "images/mic-fill.svg", "images/loading.svg", "images/soundwave.svg"],
      "matches": ["https://cad.onshape.com/*"]
    }
  ],
  "host_permissions": ["https://*/", "ws://*/"]
}
